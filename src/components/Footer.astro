---
import { Icon } from "astro-icon/components"

// components
// import SiteLogo from "@/components/SiteLogo/SiteLogo.astro"
import FooterLink from "@/components/FooterLink.astro"

// data

const today = new Date()
---

<footer
	class="bg-base-100/40 mt-12 flex flex-col items-center justify-center py-8"
>
	<div class="site-container">
		<!-- footer links -->
		<div
			class="flex w-full flex-col items-center justify-between gap-2 text-lg md:grid md:grid-cols-5"
		>
			<div class="flex justify-center py-2 text-center md:hidden">
				<!-- <SiteLogo /> -->
			</div>
			<div class="col-span-2 flex justify-end gap-4">
				<FooterLink href="/">Home</FooterLink>
				<FooterLink href="/#portfolio">Galería</FooterLink>
			</div>
			<div class="hidden justify-center text-center md:flex">
				<!-- <SiteLogo /> -->
			</div>
			<div class="flex gap-4 md:col-span-2">
				<FooterLink href="/#contact">Contacto</FooterLink>
			</div>
		</div>

		<!-- lets connect -->
		<div class="description mx-auto mt-6 max-w-[21rem] px-4 text-center">
			<p>
				<span class="italic">Conecta con nosotros !</span> Siguenos en nuestras redes
				sociales para no perderte ningún detalle de nuestra boda
			</p>
		</div>

		<!-- socials -->
		<div class="text-primary-500 mt-8 flex justify-center gap-4">
			<a
				href="https://www.instagram.com/nuria_smile/"
				target="_blank"
				rel="noopener noreferrer"
			>
				<Icon
					name="socials/basil-instagram-solid"
					class="size-6 transition hover:opacity-80"
				/>
				<span class="sr-only">Instagram</span>
			</a>
			<a
				href="https://www.instagram.com/crise999/"
				target="_blank"
				rel="noopener noreferrer"
			>
				<Icon
					name="socials/basil-instagram-solid2"
					class="size-6 transition hover:opacity-80"
				/>
				<span class="sr-only">Instagram</span>
			</a>
		</div>

		<!-- copyright -->
		<div class="mt-4 mb-2 text-center text-sm opacity-80">
			<p>08 • 06 • 2025</p>
			<p>con amor Nuria y Cristian</p>
		</div>
	</div>
</footer>
