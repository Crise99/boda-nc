---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface ImageWithFrameProps {
	image: ImageMetadata;
	frame: ImageMetadata;
	width: number;
	alt: string;
}

const { image, frame, width, alt } = Astro.props as ImageWithFrameProps;
---

<div class="relative mx-auto mt-8 aspect-square w-full overflow-hidden">
	<Image
		src={image}
		alt={alt}
		width={width}
		densities={[1.5, 2]}
		class="h-full w-full object-cover"
	/>
	<div class="absolute inset-0 h-full w-full">
		<Image
			src={frame}
			alt="frame overlay"
			width={width}
			densities={[1.5, 2]}
			class="h-full w-full object-cover"
		/>
	</div>
</div>
