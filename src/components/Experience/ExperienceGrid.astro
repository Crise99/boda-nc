---
import { type CollectionEntry } from "astro:content";

// components
import ExperienceCard from "@components/ExperienceCard/ExperienceCard.astro";

interface Props {
	experiences: CollectionEntry<"experiences">[];
	noTransitions?: boolean;
}

const { experiences, noTransitions = false } = Astro.props as Props;
---

<div class="grid gap-x-4 gap-y-10 pt-8 md:grid-cols-3 md:pt-12">
	{experiences.map((experience) => <ExperienceCard experience={experience} direction="vertical" />)}
</div>
