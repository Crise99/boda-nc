---
export const prerender = false; // Not needed in 'server' mode

import BaseLayout from "@layouts/BaseLayout.astro";

import Contact from "@components/Contact/Contact.astro";
import Hero from "@components/Hero/Hero.astro";
import Testimonials from "@components/Testimonials/Testimonials.astro";
import siteData from "@config/siteData.json";

import BankAccount from "@components/BankAccount/BankAccount.astro";
import Locations from "@components/Locations/Locations.astro";
import Message from "@components/Message/Message.astro";
import WeddingCountdown from "@components/WeddingCountdown/WeddingCountdown.astro";
import WeddingSchedule from "@components/WeddingSchedule/WeddingSchedule.astro";
import heroImage from "@images/mapa.jpg";

const title = "Pasaporte a nuestra boda";
const subtitle = "Despegamos el 08 • 06 • 2025";
const buttonText = "¿Te vienes?";
const buttonLink = "#wedding-countdown";
---

<BaseLayout title={siteData.title} description={siteData.description} navStartStyle="white">
	<Hero
		heroImage={heroImage}
		title={title}
		subtitle={subtitle}
		buttonText={buttonText}
		buttonLink={buttonLink}
	/>
	<Testimonials />
	<Locations />
	<Message />
	<WeddingSchedule />
	<WeddingCountdown />
	<BankAccount />
	<Contact />
</BaseLayout>
